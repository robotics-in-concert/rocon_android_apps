<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.robotics_in_concert.rocon_demo.waiterbot_order_app.StatusActivity"
    tools:ignore="MergeRootFrame"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="400dp"
            android:layout_height="fill_parent"
            android:text="[robot: ][laptop: ]"
            android:id="@+id/battery_status"
            android:textColor="#419df0"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="fill_vertical" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="499dp"
        android:text="One moment, Please."
        android:id="@+id/order_status"
        android:layout_gravity="center"
        android:textSize="120dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:textColor="#419df0"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/waiterbot_debug"
        android:id="@id/waiterbot_debug"
        android:layout_gravity="right|bottom"
        android:textSize="20dp"
        android:gravity="fill_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:id="@+id/log"
        android:textSize="15dp"
        android:visibility="invisible"
        android:maxLines="300" />

    <Button
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:id="@+id/show_log"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/rocon_image"
        android:layout_margin="10dp" />

</RelativeLayout>
